{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/info.log",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/error.log",
          "restrictedToMinimumLevel": "Error"
        }
      }
    ]
  },
  "ApplicationUrls": {
    "FrontEnd": "http://localhost:5173",
    "BackEnd": "http://localhost:5148"
  },
  "BackendEndpoints": {
    "ConfirmationEndpoint": "/Auth/email/confirm"
  },
  "ClientEndpoints": {
    "EmailChangeFront": "/change-password"
  },
  "SMTPSettings": {
    "Email": "change me",
    "Password": "change me",
    "Host": "smtp.gmail.com",
    "HostPort": "587"
  },
  "AllowedHosts": "*"
}
